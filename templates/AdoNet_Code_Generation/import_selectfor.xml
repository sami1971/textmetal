<Template xmlns="http://www.textmetal.com/api/v4.4.0">
		
	<!--<DebuggerBreakpoint />-->
	<Alloc token="TableAlias" />
	
	<Assign token="TableAlias">
		<Assign.Expression>
			<Value data="t0" />
		</Assign.Expression>
	</Assign>
	
	<![CDATA[commandText = @"SELECT "]]>

	<ForEach in="Columns" var-ct="#LoopCount" var-ix="#LoopIndex">
		<ForEach.Body>
			<![CDATA[ + ConnectionSpecificGetAliasedColumnName("${TableAlias}", ${TableNameSingularPascalCase}.COLUMN_NAME_${ColumnNameConstantCase})]]>
			<If>
				<If.Condition>
					<BinaryExpression operator="Ne">
						<BinaryExpression.LeftExpression>
							<Facet name="#LoopCount" />
						</BinaryExpression.LeftExpression>
						<BinaryExpression.RightExpression>
							<Facet name="#LoopIndex" />
						</BinaryExpression.RightExpression>
					</BinaryExpression>
				</If.Condition>
				<If.True>
					<![CDATA[ + @", "]]>
				</If.True>
			</If>
		</ForEach.Body>
	</ForEach>

	<![CDATA[ + @" FROM  " + ConnectionSpecificGetTableName(${TableNameSingularPascalCase}.SCHEMA_NAME_${SchemaNameConstantCase}, ${TableNameSingularPascalCase}.TABLE_NAME_${TableNameConstantCase}) + @" " + ConnectionSpecificGetTableAlias("${TableAlias}") + @" WHERE {0} ORDER BY {1}";]]>

</Template>